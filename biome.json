{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "root": true,
  "json": {
    "linter": {
      "enabled": false
    },
    "formatter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "react": "recommended"
    },
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "lineEnding": "lf",
    "enabled": true,
    "lineWidth": 80,
    "bracketSpacing": true,
    "attributePosition": "auto"
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  }
}
